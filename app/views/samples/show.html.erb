<div class="content">
  <%= turbo_frame_tag :sample do %>
    <div class="card block">
      <header class="card-header">
        <div class="card-header-title">
          <span class="mr-3">Sample: <%= @sample.name %></span>

          <%= render partial: 'tags/tag_list', locals: { tags: @sample.tags } %>
        </div>
        <div class="card-header-icon">
          <% if policy(@sample).edit? %>
            <%= link_to edit_sample_path(@sample), class: 'button is-small' do %>
              <span class="icon is-small"><%= octicon "pencil", :height => 24 %></span>
              <span>Edit Sample</span>
            <% end %>
          <% end %>
        </div>
      </header>

      <div class="card-content">
        <nav class="level">
          <div class="level-item has-text-centered">
            <div>
              <p class="heading">Projects</p>
              <p class="title"><%= @sample.projects.count %></p>
            </div>
          </div>
          <div class="level-item has-text-centered">
            <div>
              <p class="heading">Sequence Products</p>
              <p class="title"><%=  @sample.sequencing_products.count %></p>
            </div>
          </div>
          <div class="level-item has-text-centered">
            <div>
              <p class="heading">Pipeline Outputs</p>
              <p class="title"><%= PipelineOutput.joins(:sequencing_products).where(sequencing_products: @sample.sequencing_products).count %></p>
            </div>
          </div>
        </nav>
        <article class="media">
          <div class="media-content">
            <div class="content">
              <strong>Notes:</strong>
              <div class="has-background-white-bis notes-display">
                <div class="p-4">
                  <%== @sample.formatted_notes || 'None' %>
                </div>
              </div>
            </div>
            <div class="content">
              <%= render partial: 'shared/attribute_table', locals: {obj: @sample, attribute_list: @attrs } %>
            </div>
          </div>
        </article>
      </div>
    </div>
  <% end %>

  <div class="card block p-3 mt-3">
    <%= turbo_frame_tag :browse_view do %>
      <%= render partial: @table_name %>
    <% end %>
  </div>
</div>

<%= render partial: 'shared/sidebar_highlight', locals: { selected_item_id: 'samples-menu-item' } %>
